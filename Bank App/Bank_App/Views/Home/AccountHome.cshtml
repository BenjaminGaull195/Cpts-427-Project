
@model Bank_App.Models.AccountModel

@{
    ViewBag.Title = "Account";
}


<div class="container-fluid hero">
    <br />
    @Html.ActionLink("Logout", "Logout", "Home")
    <br />
    <h1>Welcome</h1>
    <p>Account Management</p>


</div>

<div class="container">
    <h3>Accounts</h3>
    <table class="table-bordered" width="800">
        <thead>
            <tr>
                <th>Account Number</th>
                <th>Account Name</th>
                <th>Account Type</th>
                <th>Balance</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var account in Model.accounts)
            {
                <tr>
                    <td>@account.AccountNum</td>
                    <td>@account.AccountName</td>
                    <td>@account.Type</td>
                    <td>@account.Balance</td>
                </tr>
            }
        </tbody>


    </table>
    <br />
    @*<input id="submit-button" type="submit" value="AccountForm" class="btn btn-primary">*@
    @Html.ActionLink("Add Account", "AccountForm", "Home", null, new { @class="btn btn-primary"})



    <br />
    <br />
    <h3>Transactions</h3>
    <table class="table-bordered" width="800">
        <theaad>
            <tr>
                <th>Account ID</th>
                <th>Transaction ID</th>
                <th>Date</th>
                <th>Type</th>
                <th>Amount</th>
            </tr>
        </theaad>
        <tbody>
            @foreach (var transaction in Model.Transactions)
            {
                <tr>
                    <td>@transaction.AccountID</td>
                    <td>@transaction.TransactionID</td>
                    <td>@transaction.TransactionDateTime</td>
                    <td>@transaction.TransactionType</td>
                    <td>@transaction.Amount</td>
                </tr>
            }
        </tbody>

    </table>

</div>
